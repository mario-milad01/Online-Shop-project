<%-include('../../shared/includes/head',{pageTitle:'Login'})%>
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="/styles/base.css">
</head>
<body>
    <%-include('../../shared/includes/header')%>
    <main id="form">
        <h1>Login</h1>
        <% if (savedData.errorMessage) {%>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= savedData.errorMessage %></p>
            </section> 
        <% } %>
        <form action="/login" method="POST">
            <p>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= savedData.email%>" required>
            </p>
            <p>
                <label for="password">User Password</label>
                <input type="password" id="password" name="password" value="<%=savedData.password %>" required>
            </p>
            <button  class="btn">Login</button>
            <p id="switch-form"><a href="/signup" >Create Account</a></p>
        </form>
        
    </main>
</body>
</html>