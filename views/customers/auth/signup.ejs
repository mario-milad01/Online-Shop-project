<%-include('../../shared/includes/head',{pageTitle:'signup'})%>
 <link rel="stylesheet" href="/styles/base.css">
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="/styles/base.css">
</head>
<body>
    <%-include('../../shared/includes/header')%>
    <main id="form">
        <h1>Create New Account</h1>
        <% if(sessionData.errorMessage){ %>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= sessionData.errorMessage %></p>
            </section> 
            
        <% } %>    
       <form action="/signup" method="POST" class="main_form"> 
            <p>
                <label for="fullname">User Name</label>
                <input type="text" id="name" name="fullname" value="<%= sessionData.name %>"  required>
            </p> 
            <p>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= sessionData.email %>" required>
            </p>
            <p>
                <label for="confirm-email">Confirm Email</label>
                <input type="email" name="confirm-email" id="confirm-email" value="<%= sessionData.confirmEmail %>" required>
            </p>
            <p>
                <label for="password">User Password</label>
                <input type="password" id="password" name="password" value="<%= sessionData.password %>"  required>
            </p>
            <hr>
            
            <p>
                <label for="postal">Postal Code</label>
                <input type="text" minlength="5" maxlength="5" id="postal" name="postal" value="<%= sessionData.postal %>" required>
            </p>
            <p>
                <label for="address">Address</label>
                <input type="text" id="address" name="address" value="<%= sessionData.address %>" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" value="<%= sessionData.city %>" required>
            </p>
            <button  class="btn">Create Account</button>
            <p id="switch-form"><a href="/login" >Login instead</a></p>
        </form>
    </main>
</body>
</html>